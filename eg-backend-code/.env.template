# Elemental Genius Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ====================
# CRITICAL SECURITY
# ====================

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=
JWT_SECRET_KEY=

# ====================
# DATABASE
# ====================

# PostgreSQL for production
DATABASE_URL=postgresql://user:password@localhost:5432/elemental_genius

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ====================
# PLATFORM API KEYS
# ====================
# Generate unique keys for each platform

ANDROID_API_KEY=
IOS_API_KEY=
DESKTOP_API_KEY=
VR_API_KEY=
WEB_API_KEY=
INSTITUTE_API_KEY=

# ====================
# CORS CONFIGURATION
# ====================
# Comma-separated list of allowed origins

CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================
# GPU CONFIGURATION
# ====================

CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_LIMIT=14336
TF_FORCE_GPU_ALLOW_GROWTH=true
TF_ENABLE_XLA=true
TF_MIXED_PRECISION=true

# ====================
# ENVIRONMENT
# ====================
# Options: development, testing, production, institute

FLASK_ENV=development

# ====================
# FEATURES
# ====================

FEATURE_VR_CLASSROOM=false
FEATURE_AI_TUTORING=true
FEATURE_VOICE=true
FEATURE_INSTITUTE=false

# ====================
# LOGGING
# ====================

LOG_LEVEL=INFO
LOG_FILE=elemental_genius.log
AUDIT_LOG_FILE=audit.log

# ====================
# VOICE PROCESSING
# ====================

VOICE_PROCESSING_ENABLED=true

# ====================
# CDN (Optional)
# ====================

CDN_URL=

# ====================
# EMAIL (Optional)
# ====================

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@elementalgenius.com

# ====================
# MONITORING (Optional)
# ====================

SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=