# ============================================================================
# Project EGO: The Elemental Genius OASIS
# Environment Variables Configuration
# ============================================================================
#
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# NEVER commit .env to git - it contains secrets!
#
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/elemental_genius_vr
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=elemental_genius_vr
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# SQLite Database (Development/Offline)
# Uncomment to use SQLite instead of PostgreSQL
# SQLITE_PATH=./data/oasis.db

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret Key
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_jwt_secret_key_here_generate_with_token_hex_32

# JWT Token Expiration (hours)
JWT_EXPIRATION_HOURS=24

# Password Hashing
# Leave blank to use defaults (bcrypt with auto rounds)
# PASSWORD_HASH_ALGORITHM=bcrypt
# PASSWORD_HASH_ROUNDS=12

# ============================================================================
# REDIS (Session Store, Caching)
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================================================
# CONNECTIVITY MODE
# ============================================================================

# Note: Internet connection is REQUIRED for full functionality including:
# - System updates and security patches
# - Multi-user VR classrooms
# - Parent remote monitoring
# - New curriculum content
# - Real-time translation
# - Voice processing
# See docs/CONNECTIVITY.md for details

# Offline Mode (Limited functionality when internet unavailable)
# Uses local SQLite, cached content, single-player mode only
ALLOW_OFFLINE_FALLBACK=true

# Preload Strategy (download content while online for offline use)
PRELOAD_NEXT_WEEK=true
PRELOAD_CLASSROOM_ASSETS=true

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# EG Backend API (Flask)
BACKEND_API_URL=http://localhost:5000
BACKEND_API_KEY=your_backend_api_key_here

# Library Server (FastAPI)
LIBRARY_API_URL=http://localhost:8001
LIBRARY_API_KEY=your_library_api_key_here

# AI Service (Ollama)
AI_SERVICE_URL=http://localhost:11434
AI_MODEL=llama2

# Translation Service
# Options: google, deepl, libre
TRANSLATION_PROVIDER=google
TRANSLATION_API_KEY=your_translation_api_key_here

# ============================================================================
# WEBSOCKET SERVER
# ============================================================================

WEBSOCKET_URL=http://localhost:5000
WEBSOCKET_PATH=/socket.io

# ============================================================================
# VR PLATFORM CONFIGURATION
# ============================================================================

# VR Platform
# Options: openxr, steamvr, oculus, psvr
VR_PLATFORM=openxr

# VR Performance
VR_TARGET_FPS=90
VR_ENABLE_HAND_TRACKING=true

# ============================================================================
# COPPA & SAFETY CONFIGURATION
# ============================================================================

# COPPA Compliance
COPPA_ENABLED=true

# Session Limits (minutes)
SESSION_LIMIT_AGE_5_7=30
SESSION_LIMIT_AGE_8_10=45
SESSION_LIMIT_AGE_11_13=60

# Communication Mode
# Options: approved_phrases, free_text (requires parental consent)
COMMUNICATION_MODE=approved_phrases

# Parent Monitoring
SHADOW_MODE_ENABLED=true
EMERGENCY_STOP_ENABLED=true

# Session Recording (requires explicit parental consent)
SESSION_RECORDING_ENABLED=false

# ============================================================================
# LOGGING
# ============================================================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=./logs

# Log Rotation
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# ============================================================================
# CONTENT & ASSETS
# ============================================================================

# Content Directory
CONTENT_DIR=./data/content

# Asset Cache Directory
ASSET_CACHE_DIR=./data/cache

# Upload Directory
UPLOAD_DIR=./data/uploads

# Max Upload Size (bytes)
MAX_UPLOAD_SIZE=104857600  # 100 MB

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Environment
# Options: development, production, testing
ENVIRONMENT=development

# Debug Mode (NEVER enable in production!)
DEBUG=false

# Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///./data/test.db

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Asset Preload on Startup
PRELOAD_CLASSROOM_ASSETS=true

# ============================================================================
# MULTI-LANGUAGE SUPPORT
# ============================================================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated ISO 639-1 codes)
# Full list: en,es,fr,de,it,pt,ru,zh,ja,ko,ar,hi,bn,pa,te,mr,ta,vi,tr,pl,uk,nl,he,th,id,ms,fa,sw,ro,hu,cs,el,sv,da,fi,no
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh,ar,hi,ru

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================

# Sentry Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Analytics
# ANALYTICS_ENABLED=false
# ANALYTICS_API_KEY=your_analytics_key_here

# ============================================================================
# CURRICULUM
# ============================================================================

# Heggerty Curriculum
CURRICULUM_TOTAL_WEEKS=35
CURRICULUM_START_WEEK=1

# STEM Integration
STEM_ENABLED=true

# ============================================================================
# PARENT DASHBOARD
# ============================================================================

# Dashboard URL (if separate from main backend)
# PARENT_DASHBOARD_URL=http://localhost:3000

# Email Notifications
# EMAIL_NOTIFICATIONS_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# EMAIL_FROM=noreply@elementalgenius.com

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Auto Backup
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_DIR=./backups

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Worker Processes
# WORKER_PROCESSES=4

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60

# CORS
# CORS_ENABLED=true
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
