        "application": {
          "exceeds": "Predicts weather based on observations",
          "meets": "Connects observations to concepts",
          "developing": "Makes basic observations"
        },
        "values_integration": {
          "exceeds": "Articulates stewardship responsibilities",
          "meets": "Understands water as God's gift",
          "developing": "Shows appreciation for water"
        }
