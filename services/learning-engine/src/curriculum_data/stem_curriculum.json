        "day2": {
          "title": "Evaporation Discovery",
          "activities": [
            "Set up evaporation experiments",
            "Measure and mark water levels",
            "Draw the water cycle"
          ]
        },
        "day3": {
          "title": "Making Clouds",
          "activities": [
            "Create cloud in a jar",
            "Observe condensation",
            "Weather watching and recording"
          ]
        },
        "day4": {
          "title": "Rain Collection",
          "activities": [
            "Build rain gauge",
            "Predict rainfall amounts",
            "Water conservation discussion"
          ]
        },
        "day5": {
          "title": "Water Cycle Model",
          "activities": [
            "Create complete water cycle model",
            "Present to family",
            "Celebrate learning with water play"
