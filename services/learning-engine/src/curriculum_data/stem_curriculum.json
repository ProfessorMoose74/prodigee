      "engineering_challenges": [
        "Build a rain collector",
        "Design a water filter with coffee filters",
        "Create a miniature greenhouse"
      ],
      "math_applications": [
        "Count raindrops in collection",
        "Measure water amounts",
        "Graph daily weather",
        "Compare temperatures"
      ],
      "christian_worldview_connections": [
        "God's provision of water for life",
        "Stewardship of water resources",
        "Noah and the flood story",
