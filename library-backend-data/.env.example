# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/elemental_library
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000
RELOAD=False
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Content Settings
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=.txt,.xml,.json,.csv
CONTENT_BASE_PATH=/data/library-content

# Performance
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
GRACEFUL_TIMEOUT=30

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090