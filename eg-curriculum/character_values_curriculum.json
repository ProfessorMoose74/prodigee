    {
      "trait_id": "CHAR-001",
      "character_trait": "Honesty",
      "biblical_foundation": "Proverbs 12:22 - 'The Lord detests lying lips, but he delights in people who are trustworthy.'",
      "american_values_connection": "George Washington and the cherry tree; Honest Abe Lincoln returning borrowed books; integrity in democratic process",
      "age_appropriate_activities": {
        "3-5": [
          "Truth vs. lie sorting game",
          "Honesty jar - celebrate truth telling",
          "Story: 'The Boy Who Cried Wolf'",
          "Role-play: admitting mistakes"
        ],
        "6-8": [
          "Honesty journal entries",
          "Research honest historical figures",
          "Create honesty pledge",
          "White lie discussions"
        ],
        "9-10": [
          "Ethics case studies",
          "Plagiarism and academic honesty",
          "Truth in media analysis",
          "Honor code development"
        ]
      },
      "real_world_applications": [
        "Admitting when you break something",
        "Telling the truth even when scared",
        "Returning extra change at store",
        "Accurate self-assessment in schoolwork"
      ],
      "assessment_indicators": {
        "emerging": "Understands difference between truth and lies",
        "developing": "Tells truth in easy situations",
        "proficient": "Consistently honest even when difficult",
        "advanced": "Promotes honesty in others"
      },
      "ai_discussion_prompts": [
        "Generate age-appropriate scenario about finding money",
        "Create story where honesty leads to positive outcome",
        "Develop questions about white lies and absolute truth",
        "Design family discussion about honesty in daily life"
      ],
      "weekly_lessons": {
        "week1": {
          "theme": "What is Truth?",
          "activities": ["Define honesty", "Truth detective game", "Bible story: Ananias and Sapphira"],
          "family_challenge": "No lying week - celebrate successes"
        },
        "week2": {
          "theme": "Honesty in History",
          "activities": ["Washington biography", "Lincoln stories", "American truth-tellers"],
          "family_challenge": "Research honest family ancestor"
        },
        "week3": {
          "theme": "Consequences of Dishonesty",
          "activities": ["Cause and effect charts", "Trust building exercises", "Repair relationships"],
          "family_challenge": "Make amends for past dishonesty"
        },
        "week4": {
          "theme": "Living Honestly",
          "activities": ["Create family honesty code", "Practice scenarios", "Celebration ceremony"],
          "family_challenge": "Model honesty in community"
        }
      }
    },
